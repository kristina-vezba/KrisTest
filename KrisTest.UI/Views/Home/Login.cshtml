@model LoginViewModel

		
<div class="flex-1">
	<div class="text-center">
		<h2>Login Page</h2>
		<p>Log in to access your account</p>
	</div>
	<div class="mt-8">
		<form action="#">
			<div>
				<label asp-for="Name" class="mb-2 text-sm">Username</label>
				<input asp-for="Name" placeholder="Your Username" class="form-control text-center px-4 py-2 mt-2" />
			</div>
			<div class="mt-6">
				<label asp-for="Password" class="text-sm">Password</label>
				<input asp-for="Password" placeholder="Your Password" class="form-control text-center px-4 py-2 mt-2" /><br />
			</div>
			<div class="mt-6">
				<input type="submit" value="Submit" class="px-4 py-2"></input>
			</div>
		</form>
		<div class="align-bottom"><br /><br />
			<p class="mt-6 text-sm text-center">Don't have an account yet? 
				<a href="/register" class="text-blue">Sign up</a>.</p>
		</div>
	</div>
</div
